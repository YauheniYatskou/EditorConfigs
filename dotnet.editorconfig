# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

# C# files
[*.cs]
indent_size = 4
indent_style = space
tab_width = 4
end_of_line = crlf
insert_final_newline = false

## for CLI/VS build to fail we have to set severity of analyzer rules to error explicitly on the line below
dotnet_analyzer_diagnostic.severity = error